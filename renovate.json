{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "node": {
    "supportPolicy": [
      "lts"
    ]
  },
  "packageRules": [
    {
      "updateTypes": [
        "minor",
        "major"
      ],
      "matchCurrentVersion": "/^\\d+\\.\\d+\\.x$/"
    }
  ]
}
